<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/backgroundColor" />
            <stroke
                android:width="1dp"
                android:color="@color/backgroundColor" />
            <corners
                android:topLeftRadius="40dp"
                android:bottomRightRadius="40dp"
                android:topRightRadius="15dp"
                android:bottomLeftRadius="15dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/buttonColor" />
            <stroke
                android:width="1dp"
                android:color="@color/buttonColor" />
            <corners
                android:topLeftRadius="40dp"
                android:bottomRightRadius="40dp"
                android:topRightRadius="15dp"
                android:bottomLeftRadius="15dp"/>
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>