<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/backgroundColor"
        android:text="Theme"
        android:textSize="18dp"

        android:textStyle="bold"
        android:layout_toRightOf="@+id/themeImage"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:background="@drawable/theme"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/themeImage"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/themeImage"
        android:background="@android:color/darker_gray"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/themeImage"
        android:id="@+id/rg"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp">




        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Light"
            android:textColor="@color/backgroundColor"
            android:id="@+id/light"
            android:textSize="16dp"
            android:paddingLeft="13dp"

            />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Dark"
            android:textColor="@color/backgroundColor"
            android:id="@+id/dark"
            android:textSize="16dp"

            android:paddingLeft="13dp"
            />






    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rg"
        android:background="@android:color/darker_gray"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notify on Silent"
        android:id="@+id/notifyonsilent"
        android:layout_below="@+id/rg"
        android:textColor="@color/backgroundColor"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch2"
        android:layout_below="@id/rg"
        android:layout_toRightOf="@+id/notifyonsilent"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do not Disturb"
        android:id="@+id/donotdisturb"
        android:layout_below="@+id/notifyonsilent"
        android:textColor="@color/backgroundColor"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:layout_below="@id/switch2"
        android:layout_toRightOf="@+id/donotdisturb"
        android:layout_marginLeft="159dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Data"
        android:id="@+id/cleardata"
        android:layout_below="@+id/donotdisturb"
        android:textColor="@color/backgroundColor"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch3"
        android:layout_below="@id/switch1"
        android:layout_toRightOf="@+id/donotdisturb"
        android:layout_marginLeft="159.5dp"
        android:layout_marginTop="16dp"/>




    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:text="Done"
    android:id="@+id/done"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="24dp"
    android:background="@drawable/button_light"
    android:textColor="@color/white"
    android:layout_marginBottom="27dp" />

</RelativeLayout>